{% extends 'layouts/base.twig' %}

{% block content %}
  <div class="post-wrap" id="post-{{ post.ID }}">
    <h1>
      {{ post.title }}
    </h1>

    {% if post.thumbnail.src %}
      <img src="{{ post.thumbnail.src('full') }}"
        alt="{{ post.title }}"
        title="{{ post.title }}" />
    {% endif %}

    {{ post.content }}
    <ul class="tag-list">
      {% for term in post.terms('tags') %}
        <li><a href="{{ term.link }}">{{ term.name }}</a></li>
      {% endfor %}
    </ul>
    <p class="byline">
      <span class="name">By {{ post.author.name }}</span>
      <time datetime="{{ post.post_date_gmt }}">
        {{ post.post_date|date('F j, Y') }}
      </time>
    </p>
    <section class="comment-box">
      <div class="comments">
        {% if post.comments %}
          <h3>
            comments
          </h3>
          {% for cmt in post.comments %}
            {% include 'components/comment.twig' with {
              comment: cmt
            } %}
          {% endfor %}
        {% endif %}
      </div>
      {% if post.comment_status == 'closed' %}
        <p>
          comments for this post are closed
        </p>
      {% else %}
        {% include 'components/comment-form.twig' %}
      {% endif %}
    </section>
    {{
      fn(
        'edit_post_link',
        'Edit',
        '<span class="edit-link">',
        '</span>',
        post.ID
      )
    }}
  </div>
{% endblock %}
