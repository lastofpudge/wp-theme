{
  "name": "theme/blank",
  "type": "wp-theme",
  "description": "Wordpress starter theme with Timber/Twig",
  "license": "GNU GPL",
  "authors": [
    {
      "name": "Andrii Dudin",
      "email": "iluxor1991@gmail.com"
    }
  ],
  "keywords": [
    "WordPress"
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": "^7.4|8.*",
    "htmlburger/carbon-fields": "^3.3.4",
    "tightenco/collect": "^8.34.0",
    "timber/timber": "^1.22.1",
    "twig/twig": "^2.0",
    "vlucas/phpdotenv": "^5.5",
    "wpackagist-plugin/all-in-one-wp-migration": "*",
    "wpackagist-plugin/wordpress-seo": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "App\\Admin\\": "app/Admin",
      "Core\\": "core/"
    }
  },
  "config": {
    "vendor-dir": "core/vendor",
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform-check": false,
    "allow-plugins": {
      "composer/installers": true
    }
  },
  "scripts": {
    "lint": [
      "phpcs --extensions=php --standard=PSR12 ./app"
    ]
  },
  "extra": {
    "installer-paths": {
      "core/vendor/{$name}": [
        "htmlburger/carbon-fields"
      ],
      "../../plugins/{$name}": [
        "wpackagist-plugin/all-in-one-wp-migration",
        "wpackagist-plugin/wordpress-seo"
      ]
    }
  },
  "require-dev": {
    "php-stubs/wordpress-stubs": "^5.4",
    "squizlabs/php_codesniffer": "^3.0"
  }
}
