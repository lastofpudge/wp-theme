{
  "name": "theme/blank",
  "type": "wp-theme",
  "description": "Wordpress starter theme with Timber/Twig",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Andrii Dudin",
      "email": "iluxor1991@gmail.com"
    }
  ],
  "keywords": [
    "WordPress",
    "theme",
    "starter",
    "timber",
    "twig"
  ],
  "require": {
    "php": "^7.4|8.*",
    "htmlburger/carbon-fields": "^3.6.3",
    "timber/timber": "^2.0.0",
    "twig/twig": "^v3.8.0",
    "vlucas/phpdotenv": "^v5.6.0",
    "wpackagist-plugin/all-in-one-wp-migration": "*",
    "wpackagist-plugin/wordpress-seo": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "App\\Admin\\": "app/Admin",
      "Core\\": "core/"
    },
    "files": [
      "core/Initialize.php",
      "core/Helpers.php",
      "core/PostType.php",
      "config/app.php",
      "app/Actions/ajax.php",
      "app/CarbonFields/OptionFields.php",
      "app/CarbonFields/PostFields.php",
      "app/CarbonFields/Blocks.php"
    ]
  },
  "config": {
    "vendor-dir": "core/vendor",
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform-check": false,
    "allow-plugins": {
      "composer/installers": true
    }
  },
  "scripts": {
    "lint": [
      "phpcs --extensions=php --standard=PSR12 ./app"
    ]
  },
  "extra": {
    "installer-paths": {
      "core/vendor/{$name}": [
        "htmlburger/carbon-fields"
      ],
      "../../plugins/{$name}": [
        "wpackagist-plugin/all-in-one-wp-migration",
        "wpackagist-plugin/wordpress-seo"
      ]
    }
  },
  "require-dev": {
    "php-stubs/wordpress-stubs": "^6.4",
    "squizlabs/php_codesniffer": "^3.7"
  }
}
